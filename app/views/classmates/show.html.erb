<%- model_class = Classmate -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:first_name) %>:</strong></dt>
  <dd><%= @classmate.first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_name) %>:</strong></dt>
  <dd><%= @classmate.last_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:married_name) %>:</strong></dt>
  <dd><%= @classmate.married_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:spouse) %>:</strong></dt>
  <dd><%= @classmate.spouse %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @classmate.addresses.inspect %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone_number) %>:</strong></dt>
  <dd><%= @classmate.phones.inspect %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @classmate.emails.inspect %></dd>
  <dt><strong><%= model_class.human_attribute_name(:paid) %>:</strong></dt>
  <dd><%= @classmate.paid %></dd>
  <dt><strong><%= model_class.human_attribute_name(:attending) %>:</strong></dt>
  <dd><%= @classmate.attending %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status_id) %>:</strong></dt>
  <dd><%= @classmate.status_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @classmate.user_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              classmates_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_classmate_path(@classmate), :class => 'btn btn-default' %>
